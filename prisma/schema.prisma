generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   String   @id @default(uuid())
  name String   @default("anon")
  time Int
  date DateTime @updatedAt

  @@map("users")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Game {
  id         Int    @id @default(autoincrement())
  image      String
  width      Int
  height     Int
  source     String
  characters Json

  @@map("games")
}
